<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vendor_product_layout">
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/list_product_name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Product name "
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        />
    <TextView
        android:id="@+id/list_product_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="product barcode"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/list_product_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="18sp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        />
  <LinearLayout
      android:layout_marginTop="15dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" 
          android:text=" â‚¹ "
          android:textSize="20sp"
          android:textStyle="bold"
          android:paddingLeft="15dp"
          android:paddingRight="5dp"
          />
      <TextView
          android:id="@+id/list_product_rate"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0.0"
          android:textSize="20sp"
          android:paddingLeft="5dp"
          android:paddingRight="10dp"/>
      </LinearLayout>
      <LinearLayout
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:text="Qty"

          />
      <TextView
          android:id="@+id/list_product_qty"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="0"
          android:textSize="20sp"
          android:layout_marginLeft="10dp"
          />
      </LinearLayout>
  </LinearLayout>

</LinearLayout>